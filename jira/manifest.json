{
  "name": "JIRA ShortCut - BKTB",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Copy to clip board jira issue as 'CMD-999: Description'",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "background": {
    "scripts": [ "js/config.js","js/bg.js"]
  },
  "permissions" : [
    "tabs",
    "webNavigation",
    "background",
    "clipboardWrite"
  ],
  "page_action": {
    "default_icon": "icon.png",
    "default_title": "Copy",
    "default_popup": "popup.html"
  },
  "commands": {
    "_execute_page_action": {
      "suggested_key": {
        "default": "Ctrl+J"
      }
    }
  },
  "options_page" : "options.html"
}
